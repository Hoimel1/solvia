# SOLVIA custom INSANE image (built from vendored source)
FROM python:3.10-slim

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN python -m pip install --upgrade pip && \
    pip install pyyaml==6.0.1

# Copy vendored Insane and install
COPY vendor/Insane /opt/Insane
RUN pip install /opt/Insane

WORKDIR /work

ENTRYPOINT ["insane"]
